	<!--==============================Content=================================-->

	<div class="content ">
		<div class="container_12">
			<div class="grid_12">
				<h3 style="text-align: left; padding-top: 7px; font-size: 30px;">Edit
					Menu Item : <%=item[0].item_name%></h3>
			</div>

			<div style="background-color: rgba(215, 215, 177, 0.45); border-radius: 5px;">
				<form  style="padding: 15px;" action="/updateMenuItem" method="post">

					<div>
						<label>Item Name</label> <input type="text" name="itemName" value="<%=item[0].item_name%>"/>
					</div>
					<input type="hidden" value="<%=item[0].item_id%>" name="itemId"/>
					<div>
						<label>Item Description</label>
						<textarea rows="5" name="itemDescription"><%=item[0].item_description%></textarea>
					</div>
					<div>
						<label>Item Price</label> <input type="number" name="price" value="<%=item[0].price%>"/>
					</div>

					<div>
						<label>Item Category</label> <select id="catId" name="categoryId" value="<%=item[0].category_id%>"></select>
					</div>
					<div>
						<label>Veg/Non- veg</label><input type="text" name="veg" value="<%=item[0].veg%>"/>
					</div>
					<div>
						<button type="submit">Update Item</button>
						<button >Cancel</button>
					</div>
				</form>
			</div>
		</div>
	</div>


