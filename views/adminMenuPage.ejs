<body class="">

	<!--==============================header=================================-->
	<header>
		<div class="container_12">
			<div class="grid_12">
				<h1>
					<a href="/"><img src="images/logo.png" alt="Boo House"></a>
				</h1>
				<div class="menu_block">


					<nav id="bt-menu" class="bt-menu">
						<a href="#" class="bt-menu-trigger"><span>Menu</span></a>
						<ul>
							<li class="bt-icon "><a href="/adminHome">Home</a></li>
							<li class="current bt-icon"><a href="/showAdminMenu">Manage Menu Items</a></li>
							<li class="bt-icon" style="margin-left: 82px;"><a
								href="/addCategory">Manage Category</a></li>
							<li class="bt-icon" style="margin-left: -91px;"><a
								href="/createOrder">Orders</a></li>
							<li class="bt-icon"><a href="">Logout</a></li>
						</ul>
					</nav>

					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</div>
		</div>
	</header>

	<!--==============================Content=================================-->

	<div class="content">
		<div class="ic">More Website Templates @ TemplateMonster.com -
			December 02, 2013!</div>
		<div class="container_12">

			<div class="grid_4">
				<h3>Menu Items</h3>
				<ul class="list">
					<% var url; for(var i=0;i< itemList.length;i++){ url =
					'/showAdminEditMenu/'+itemList[i].item_id; %>
					<li id="item<%=i%>"><a href="<%=url%>"
						style="font-weight: bold;"><%=itemList[i].item_name%></a> <a
						href="#" onclick="deleteItem(<%=itemList[i].item_id%>,<%=i%>)">Delete</a></li>
					<% } %>

				</ul>
			</div>
			<div class="grid_4">
				<div
					style="background-color: rgba(215, 215, 177, 0.45); border-radius: 5px; margin-top: 200px; padding: 20px;">
					<p style="font-weight: bold; font-size: 20px;">Want to add more
						Items?</p>

					<p class="pad1"></p>

					<div>
						<a href="/addMenu">Add New Item</a>
					</div>
				</div>
			</div>
		</div>


	</div>

	<!--==============================footer=================================-->

	<footer>
		<div class="container_12">
			<div class="grid_6 prefix_3">
				<a href="index.html" class="f_logo"><img src="images/f_logo.png"
					alt=""></a>
				<div class="copy">
					&copy; 2013 | <a href="#">Privacy Policy</a> <br> Website
					designed by <a href="http://www.templatemonster.com/"
						rel="nofollow">TemplateMonster.com</a>
				</div>
			</div>
		</div>
	</footer>
	<script>
		$(document).ready(function() {
			$(".bt-menu-trigger").toggle(function() {
				$('.bt-menu').addClass('bt-menu-open');
			}, function() {
				$('.bt-menu').removeClass('bt-menu-open');
			});
		})
	</script>
</body>

</html>